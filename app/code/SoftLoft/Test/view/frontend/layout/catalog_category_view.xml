<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="category.products">
                <referenceBlock name="category.products.list">
                    <action method="setTemplate">
                        <argument name="template" xsi:type="string">SoftLoft_Test::product/list.phtml</argument>
                    </action>
                    <block class="SoftLoft\Test\Block\SalesInformation" name="category.product.salesinformation" as="salesinformation"/>
                </referenceBlock>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
